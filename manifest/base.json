{
  "name": "LiTags",
  "description": "__MSG_appDescription__",
  "manifest_version": 2,
  "default_locale": "en",
  "permissions": [ "storage", "alarms" ],
  "icons": {
    "48": "assets/litags_icon48.png",
    "128": "assets/litags_icon128.png"
  },
  "page_action": {
    "default_icon": {
      "16": "assets/litags_icon16.png",
      "32": "assets/litags_icon32.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [ "http://*.lichess.org/*", "https://*.lichess.org/*" ],
      "js": ["content.js"],
      "css": [ "styles.css" ]
    }
  ]
}
