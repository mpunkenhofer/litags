{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "target": "es6",
    "module": "commonjs",
    "allowJs": false,
    "types": [
      "@types/chrome",
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
